{
  "name": "My Youtube Bookmarks",
  "version": "1.1.0",
  "description": "Effortlessly save and manage your favorite moments on YouTube with My YouTube Bookmarks. This handy Chrome extension allows you to bookmark specific timestamps in YouTube videos, making it easy to revisit key moments, tutorials, highlights, or your favorite scenes.",
  "icons": { 
    "16": "assets/ext-icon.png", 
    "48": "assets/ext-icon.png", 
    "128": "assets/ext-icon.png"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "My Youtube Bookmarks",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
